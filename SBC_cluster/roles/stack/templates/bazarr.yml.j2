version: "3.7"

services:
  bazarr:
    image: linuxserver/bazarr:latest
    environment:
      - PGID=100
      - PUID=1024
      - TZ=Europe/Paris
    volumes:
    - /etc/localtime:/etc/localtime:ro
    - /mnt/nfs/Bazarr:/config
    - tv:/tv
    - tv-archive:/tv-archive
    - movies:/movies
      
    networks:
      - traefik_network
    deploy:
      replicas: 1
      placement:
        constraints:
          - node.hostname==docker.{{domain}}
      labels:
        - "traefik.enable=true"
        - "traefik.http.routers.bazarr-unsecure.rule=Host(`brr.{{domain}}`)"
        - "traefik.http.routers.bazarr-unsecure.middlewares=redirect@file"
        - "traefik.http.routers.bazarr-unsecure.entrypoints=http"
        - "traefik.http.routers.bazarr.rule=Host(`brr.{{domain}}`)"
        - "traefik.http.routers.bazarr.tls=true"
        - "traefik.http.routers.bazarr.entrypoints=https"
        - "traefik.http.routers.bazarr.service=bazarr"
        - "traefik.http.services.bazarr.loadbalancer.server.port=6767"
      restart_policy:
        condition: on-failure
        delay: 15s
        max_attempts: 3
        window: 120s

networks:
  traefik_network:
    external: true

volumes:
  tv:
    driver_opts:
      type: "nfs"
      o: "addr={{NAS1}},nolock,hard,rw,timeo=600,vers=4.1"
      device: ":/{{tv_remote_path}}"
  tv-archive:
    driver_opts:
      type: "nfs"
      o: "addr={{NAS1}},nolock,hard,rw,timeo=600,vers=4.1"
      device: ":/{{tv_archive_remote_path}}"
  movies:
    driver_opts:
      type: "nfs"
      o: "addr={{NAS1}},nolock,hard,rw,timeo=600,vers=4.1"
      device: ":/{{video_remote_path}}/movies"
