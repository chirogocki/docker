version: "3.7"

services:
  jackett:
    image: linuxserver/jackett:latest
    environment:
      - PGID=100
      - PUID=1024
      - TZ=Europe/Paris
    volumes:
    - /etc/localtime:/etc/localtime:ro
    - /mnt/nfs/Jackett:/config
    - downloads:/downloads
      
    networks:
      - traefik_network
    deploy:
      replicas: 1
      placement:
        constraints:
          - node.hostname==docker.{{domain}}
      labels:
        - "traefik.enable=true"
        - "traefik.http.routers.jackett-unsecure.rule=Host(`jtt.{{domain}}`)"
        - "traefik.http.routers.jackett-unsecure.middlewares=redirect@file"
        - "traefik.http.routers.jackett-unsecure.entrypoints=http"
        - "traefik.http.routers.jackett.rule=Host(`jtt.{{domain}}`)"
        - "traefik.http.routers.jackett.tls=true"
        - "traefik.http.routers.jackett.entrypoints=https"
        - "traefik.http.routers.jackett.service=jackett"
        - "traefik.http.services.jackett.loadbalancer.server.port=9117"
      restart_policy:
        condition: on-failure
        delay: 15s
        max_attempts: 3
        window: 120s

networks:
  traefik_network:
    external: true

volumes:
  downloads:
    driver_opts:
      type: "nfs"
      o: "addr={{NAS1}},nolock,hard,rw,timeo=600,vers=4.1"
      device: ":/{{downloads_remote_path}}torrent_hole"
