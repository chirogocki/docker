version: "3.2"

services:
  registry:
    restart: always
    image: registry:2.6
    volumes:
      - registry:/var/lib/registry
    networks:
      - traefik_public
    deploy:
      mode: replicated
      replicas: 1
      placement:
        constraints:
          - node.role == manager
      labels:
        - "traefik.port=5000"
        - "traefik.docker.network=traefik_public"
        - "traefik.frontend.rule=Host:registry.{{domain}}"
        - traefik.enable=true

volumes:
  registry:
    driver_opts:
      type: "nfs"
      o: "addr={{NAS1}},nolock,soft,rw"
      device: ":/{{docker_remote_path}}Registry"

networks:
  traefik_public:
    external: true