version: "3.7"

services:
  swarmpit:
    image: swarmpit/swarmpit:latest
    environment:
      - SWARMPIT_DB=http://swarmpit-db:5984
      - SWARMPIT_INFLUXDB=http://swarmpit-influxdb:8086
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
    networks:
      - swarmpit-net
      - traefik_network
    deploy:
      labels:
        - "traefik.enable=true"
        - "traefik.http.routers.swarmpit-unsecure.rule=Host(`swarmpit.{{domain}}`)"
        - "traefik.http.routers.swarmpit-unsecure.middlewares=redirect@file"
        - "traefik.http.routers.swarmpit-unsecure.entrypoints=http"
        - "traefik.http.routers.swarmpit.rule=Host(`swarmpit.{{domain}}`)"
        - "traefik.http.routers.swarmpit.tls=true"
        - "traefik.http.routers.swarmpit.entrypoints=https"
        - "traefik.http.services.swarmpit.loadbalancer.server.port=8080"
      resources:
        limits:
          cpus: "0.50"
          memory: 1024M
        reservations:
          cpus: "0.25"
          memory: 512M
      placement:
        constraints:
          - node.hostname==fractal.{{domain}}

  swarmpit-db:
    image: couchdb:2.3.0
    volumes:
      - swarmpit-db-data:/opt/couchdb/data
    networks:
      - swarmpit-net
    deploy:
      resources:
        limits:
          cpus: "0.30"
          memory: 512M
        reservations:
          cpus: "0.15"
          memory: 256M

  swarmpit-agent:
    image: swarmpit/agent:latest
    environment:
      - DOCKER_API_VERSION=1.35
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
    networks:
      - swarmpit-net
    deploy:
      mode: global
      labels:
        swarmpit.agent: "true"
      resources:
        limits:
          cpus: "0.10"
          memory: 64M
        reservations:
          cpus: "0.05"
          memory: 32M
    
  swarmpit-influxdb:
    image: influxdb:1.7
    volumes:
      - influx-data:/var/lib/influxdb
    networks:
      - swarmpit-net
    deploy:
      resources:
        limits:
          cpus: '0.30'
          memory: 256M
        reservations:
          cpus: '0.15'
          memory: 128M

volumes:
  swarmpit-db-data:
    driver_opts:
      type: "nfs"
      o: "addr={{NFS}},nolock,soft,rw,timeo=600,vers=4.1"
      device: ":/data/Swarmpit/db"
  influx-data:
    driver_opts:
      type: "nfs"
      o: "addr={{NFS}},nolock,soft,rw,timeo=600,vers=4.1"
      device: ":/data/Swarmpit/influx"

networks:
  swarmpit-net:
    driver: overlay
    attachable: true
  traefik_network:
    external: true