version: "3.2"

services:
# This simply validates that traefik forward authentication is working
  swarm-dashboard:
    image: charypar/swarm-dashboard
    volumes:
    - "/var/run/docker.sock:/var/run/docker.sock"
    ports:
    - 8080:8080
    environment:
      PORT: 8080
    deploy:
      replicas: 1
      placement:
        constraints:
          - node.role == manager
    deploy:
      labels:
        - traefik.frontend.rule=Host:swarm-dashboard.w00t.ovh
        - traefik.port=8080
        - traefik.frontend.auth.forward.address=http://auth.w00t.ovh:4181
        - traefik.frontend.auth.forward.authResponseHeaders=X-Forwarded-User
        - traefik.frontend.auth.forward.trustForwardHeader=true
      placement:
        constraints: [node.role == manager]
      restart_policy:
        condition: on-failure

networks:
  traefik_public:
    external: true
