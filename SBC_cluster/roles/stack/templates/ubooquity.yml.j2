version: "3.2"

services:
  ubooquity:
    image:  linuxserver/ubooquity:latest
    environment:
      - PGID=100
      - PUID=1024
      - TZ=Europe/Paris
      - MAXMEM=1024
    volumes:
    - /etc/localtime:/etc/localtime:ro
    - {{docker_conf_path}}/Ubooquity:/config
    - {{books_path}}:/books
    - {{books_path}}/files:/files
    - {{comics_path}}:/comics
    - {{private_path}}:/private
    networks:
      - internale
      - traefik_public
    deploy:
      replicas: 1
      placement:
        constraints: [node.role == worker]
      labels:
        - traefik.admbooks.frontend.rule=Host:admbooks.{{domain}}
        - traefik.admbooks.port=2203
        - traefik.books.frontend.rule=Host:books.{{domain}}
        - traefik.books.port=2202
      resources:
        limits:
          memory: 1024M
          cpus: '1.5'
        reservations:
          memory: 1024M
          cpus: '1'
      restart_policy:
        condition: on-failure
        delay: 15s
        max_attempts: 3
        window: 120s

networks:
  traefik_public:
    external: true
  internale:
    driver: overlay
    ipam:
      config:
        - subnet: 172.16.12.0/24
