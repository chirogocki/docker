version: "3.2"

services:
  ubooquity:
    image:  linuxserver/ubooquity:latest
    environment:
      - PGID=100
      - PUID=1024
      - TZ=Europe/Paris
      - MAXMEM=768
    volumes:
    - /etc/localtime:/etc/localtime:ro
    - ubooquity_config:/config
    - ubooquity_books:/books
    - ubooquity_files:/files
    - ubooquity_comics:/comics
    - ubooquity_private:/private
    networks:
      - internal
      - traefik_public
    deploy:
      replicas: 1
      #placement:
      #  constraints: [node.role == worker]
      labels:
        - traefik.admbooks.frontend.rule=Host:admbooks.{{domain}}
        - traefik.admbooks.port=2203
        - traefik.books.frontend.rule=Host:books.{{domain}}
        - traefik.books.port=2202
      resources:
        limits:
          memory: 1024M
        reservations:
          memory: 768M
      restart_policy:
        condition: on-failure
        delay: 15s
        max_attempts: 3
        window: 120s

volumes:
  ubooquity_config:
    driver: nfs
    driver_opts:
      share: {{NAS1}}:/volume1/docker/Ubooquity
  ubooquity_books:
    driver: nfs
    driver_opts:
      share: {{NAS1}}:/volume1/Books
  ubooquity_files:
    driver: nfs
    driver_opts:
      share: {{NAS1}}:/volume1/Books/files
  ubooquity_comics:
    driver: nfs
    driver_opts:
      share: {{NAS1}}:/volume1/Books/Comics
  ubooquity_private:
    driver: nfs
    driver_opts:
      share: {{NAS2}}:/volume1/private

networks:
  traefik_public:
    external: true
  internal:
    driver: overlay
    ipam:
      config:
        - subnet: 172.16.12.0/24
