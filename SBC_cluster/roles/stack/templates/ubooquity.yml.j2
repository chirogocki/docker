version: "3.2"

services:
  ubooquity:
    image:  linuxserver/ubooquity:latest
    environment:
      - PGID=100
      - PUID=1024
      - TZ=Europe/Paris
      - MAXMEM=768
    volumes:
    - /etc/localtime:/etc/localtime:ro
    - config:/config
    - books:/books
    - files:/files
    - comics:/comics
    - private:/private
      
    networks:
      - internal
      - traefik_public
    deploy:
      replicas: 1
      #placement:
      #  constraints: [node.role == worker]
      labels:
        - traefik.admbooks.frontend.rule=Host:admbooks.{{domain}}
        - traefik.admbooks.port=2203
        - traefik.books.frontend.rule=Host:books.{{domain}}
        - traefik.books.port=2202
      resources:
        limits:
          memory: 1024M
        reservations:
          memory: 768M
      restart_policy:
        condition: on-failure
        delay: 15s
        max_attempts: 3
        window: 120s

volumes:
  config:
    driver_opts:
      type: "nfs"
      o: "addr={{NAS1}},nolock,soft,rw"
      device: ":/volume1/docker/Ubooquity/"
  books:
    driver_opts:
      type: "nfs"
      o: "addr={{NAS1}},nolock,soft,rw"
      device: ":/volume1/Books/Books/"
  files:
    driver_opts:
      type: "nfs"
      o: "addr={{NAS1}},nolock,soft,rw"
      device: ":/volume1/Books/Books/files"
  comics:
    driver_opts:
      type: "nfs"
      o: "addr={{NAS1}},nolock,soft,rw"
      device: ":/volume1/Books/Comics/"
  private:
    driver_opts:
      type: "nfs"
      o: "addr={{NAS2}},nolock,soft,rw"
      device: ":/volume1/private/"

networks:
  traefik_public:
    external: true
  internal:
    driver: overlay
    ipam:
      config:
        - subnet: 172.16.12.0/24
